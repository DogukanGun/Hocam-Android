<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/totalPointKeyTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textLargeSize"
            android:text="@string/total_point_key"
            android:padding="@dimen/paddingSmall"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/marginLarge"
            app:layout_constraintEnd_toStartOf="@+id/totalPointValueTV"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"  />

        <TextView
            android:id="@+id/totalPointValueTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/paddingSmall"
            android:text="@string/total_point_key"
            android:textColor="@color/black"
            android:textSize="@dimen/textLargeSize"
            app:layout_constraintBottom_toBottomOf="@+id/totalPointKeyTV"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/totalPointKeyTV" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/finishButtonBTN"
            style="@style/StandartButton"
            android:layout_width="0dp"
            android:text="@string/finish_quiz"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginMedium"
            android:layout_marginEnd="@dimen/marginMedium"
            android:layout_marginBottom="@dimen/marginLarge"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteY="521dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>